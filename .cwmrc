fontname "Monospace:size=7"

unbind-key all
unbind-mouse M-1
unbind-mouse CM-1
unbind-mouse M-2
unbind-mouse M-3
unbind-mouse CMS-3

bind-key 4-Return xterm
bind-key 4-l xlock
bind-key 4-w window-hide
bind-key 4-j window-cycle
bind-key 4-k window-rcycle
bind-key 4-n window-menu-label

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5

bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5

bind-key 4-a group-toggle-all
bind-key 4-g window-group
bind-key 4-s window-stick

bind-key 4-f window-fullscreen
bind-key 4-m window-maximize
bind-key 4-equal window-vmaximize
bind-key 4-minus window-hmaximize

bind-key 4-h window-move-left-big
bind-key 4-l window-move-right-big
bind-key C-j window-move-down-big
bind-key C-k window-move-up-big

bind-key 4S-h window-resize-left-big
bind-key 4S-l window-resize-right-big
bind-key 4S-j window-resize-down-big
bind-key 4S-k window-resize-up-big

bind-key 4-v window-vtile
bind-key 4-c window-htile

bind-key 4-slash menu-window
bind-key 4-d menu-cmd
bind-key 4-p menu-exec
bind-key 4-period menu-ssh

bind-key 4-q restart
bind-key 4S-q quit

bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize
bind-mouse 4-2 window-lower
bind-mouse 4S-2 window-hide

# these commands will appear in the command menu
command term  xterm
command firefox firefox
command xcalc  xcalc
command gimp gimp

borderwidth 3
snapdist 5
moveamount 3
sticky yes
color activeborder   red
color inactiveborder darkgrey
color menufg         '#000000'
color menubg         '#d9d9d9'
color font           '#000000'
#gap 40 10 10 10
